{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "demos/*",
      "storybook",
      "site"
    ]
  },
  "scripts": {
    "dev": "yarn workspace react-tutorial-demo dev",
    "storybook": "yarn workspace storybook",
    "site": "yarn workspace site",
    "build": "yarn wsrun -m --stages -c script build",
    "watch": "yarn wsrun -m -c script build --watch",
    "version": "yarn wsrun -m --serial -c script version", 
    "watch-package": "yarn wsrun -p '@code-hike/mini-editor' -r script build --watch ",
    "publish-canary": "yarn wsrun -p '@code-hike/*' --exclude '@code-hike/build' --serial -c publish-canary",
    "build-site": "yarn build && yarn workspace site export",
    "storybook-watch": "yarn watch & yarn storybook start"
  },
  "dependencies": {
    "@emotion/core": "10.0.7",
    "theme-ui": "0.2.31"
  },
  "devDependencies": {
    "wsrun": "^5.2.4"
  }
}
