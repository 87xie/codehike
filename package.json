{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "demos/*",
      "storybook",
      "site"
    ]
  },
  "scripts": {
    "dev": "yarn workspace react-tutorial-demo dev",
    "storybook": "yarn workspace storybook",
    "site": "yarn workspace site",
    "build-packages": "yarn wsrun -p '@code-hike/*' --exclude '@code-hike/build' --stages -c build",
    "watch-packages": "yarn wsrun -p '@code-hike/*' --exclude '@code-hike/build' -c watch",
    "build-site": "yarn build-packages && yarn workspace site export",
    "storybook-watch": "yarn watch-packages & yarn storybook start"
  },
  "dependencies": {
    "@emotion/core": "10.0.7",
    "theme-ui": "0.2.31"
  },
  "devDependencies": {
    "wsrun": "^5.2.4"
  }
}
